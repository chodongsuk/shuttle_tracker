<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/travel_way_one"
            style="@style/destination_block_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green"
            android:clickable="true"
            android:contentDescription="@string/car"
            android:enabled="true"
            android:gravity="center"
            android:src="@drawable/ic_directions_car_black_48dp"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:text="Approximately 20 minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/travel_way_two"
        style="@style/destination_block_style"
        android:background="@drawable/light_green"
        android:contentDescription="@string/bus"
        android:src="@drawable/ic_directions_bus_black_48dp" />


    <ImageButton
        android:id="@+id/travel_way_three"
        style="@style/destination_block_style"
        android:background="@drawable/lime"
        android:contentDescription="@string/bus"
        android:src="@drawable/ic_directions_bike_black_48dp" />

</LinearLayout>