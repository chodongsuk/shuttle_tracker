<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        style="@style/destination_block_style"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/indigo" />

    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/circle"
        android:contentDescription="@string/play_stop"
        android:src="@drawable/ic_play_arrow_white_18dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <TextView
        android:id="@+id/timeToDestination"
        style="@style/destination_block_style"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/blue"
        android:text="@string/time_to_dest_placeholder"
        android:textSize="25sp" />
</LinearLayout>
