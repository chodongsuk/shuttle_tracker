<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            tools:ignore="MissingPrefix"
            android:id="@+id/destination_letter_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/destination_list_circle_purple"
            android:textColor="#fff"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/destination_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:enabled="true"
                android:text="South Kirkland Park and Ride"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destination_address_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10610 NE 38th Pl, Kirkland, WA 98033" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/destination_carrot_id"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/chevron" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"/>
</RelativeLayout>
